<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Snackbar" parent="Widget.MaterialComponents.Snackbar">
        <item name="android:backgroundTint">@color/bottom_navigation_inactive</item>
        <item name="elevation">0dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.Corner.None</item>
    </style>

    <style name="SnackbarTV" parent="Widget.MaterialComponents.Snackbar.TextView">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/bottom_navigation_background</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/sp14</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textAllCaps">false</item>

    </style>

    <style name="ToolbarTextAppearance">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/sp22</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="ToolbarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">top</item>
    </style>

    <style name="ToolbarSettingStyle" parent="ToolbarStyle">
        <item name="android:titleTextColor">@color/YPBlack</item>
    </style>

    <style name="Button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/dp16</item>
        <item name="android:layout_marginBottom">@dimen/dp16</item>
        <item name="cornerRadius">16dp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:layout_weight">1</item>
        <!--text-->
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/sp22</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textFontWeight">500</item>
        <item name="textAllCaps">false</item>
        <item name="iconTint">@color/YPBlack</item>
        <item name="iconPadding">8dp</item>
        <item name="iconGravity">textStart</item>

    </style>

    <style name="Button_update" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <!--        <item name="android:foreground">?attr/selectableItemBackground</item>-->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">54dp</item>
        <item name="backgroundTint">@color/placeholder_search</item>

        <!--text-->
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/sp14</item>
        <item name="android:textColor">@color/update</item>
        <item name="android:textFontWeight">500</item>
        <item name="textAllCaps">false</item>


    </style>

    <style name="setting_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textFontWeight">400</item>
        <item name="textAllCaps">false</item>
        <item name="android:paddingVertical">@dimen/dp20</item>
        <item name="layout_constraintHorizontal_bias">0</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>

    </style>

    <style name="player_text">
        <item name="android:textColor">@color/text</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="player_text_details_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_det</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">13sp</item>
        <item name="layout_constraintHorizontal_bias">0</item>
        <item name="android:paddingVertical">@dimen/dp10</item>

    </style>

    <style name="player_text_details">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingVertical">@dimen/dp10</item>
        <item name="android:gravity">end</item>

    </style>

    <style name="image_button_setting">
        <item name="backgroundTint">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MySwitch" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textFontWeight">400</item>
        <item name="textAllCaps">false</item>
        <item name="android:paddingVertical">@dimen/dp20</item>
        <item name="layout_constraintHorizontal_bias">0</item>

        <item name="thumbTint">@color/switch_circle</item>
        <item name="trackTint">@color/switch_stick</item>
        <item name="trackTintMode">src_in</item>
    </style>

    <style name="tabLayout">
        <item name="android:background">@color/white</item>
        <item name="tabIndicatorColor">@color/YPBlack</item>
        <item name="tabTextColor">@color/YPBlack</item>
    </style>

    <style name="bottom_navigation" parent="Widget.MaterialComponents.BottomNavigationView">

        <item name="itemBackground">@color/bottom_navigation_background</item>
        <item name="elevation">5dp</item>

        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/sp12</item>
        <item name="itemTextAppearanceActive">@color/bottom_navigation_active</item>
        <item name="itemTextAppearanceInactive">@color/bottom_navigation_inactive</item>
        <item name="itemRippleColor">@android:color/transparent</item>
        <item name="itemIconTint">@color/navigation_color</item>
        <item name="itemTextColor">@color/navigation_color</item>
    </style>

    <style name="button_player">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_constraintDimensionRatio">H,1:1</item>
    </style>

    <style name="input_playlist" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">@dimen/_0dp</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:textColorHint">"@color/YPBlue"</item>
        <item name="hintTextColor">@color/YPBlue</item>

        <item name="android:textCursorDrawable">"@drawable/cursor"</item>
        <item name="cursorColor">@color/cursor</item>
        <item name="boxStrokeColor">@color/selector_input</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/dp8</item>
        <item name="boxCornerRadiusBottomStart">@dimen/dp8</item>
        <item name="boxCornerRadiusTopEnd">@dimen/dp8</item>
        <item name="boxCornerRadiusTopStart">@dimen/dp8</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/ys_text_regular</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="counterMaxLength">20</item>

        <item name="android:padding">@dimen/dp8</item>
        <item name="android:textSize">@dimen/sp16</item>
    </style>

    <style name="playlist_more_textView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp16</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:paddingVertical">@dimen/_21dp</item>
        <item name="android:paddingStart">@dimen/dp16</item>
        <item name="android:clickable">true</item>
    </style>

</resources>